<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zhanglin.book">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="debug.AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/book_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/book_AppTheme">
        <meta-data
            android:name="com.zhanglin.commonlib.utils.glide.CustomCachingGlideModule"
            android:value="GlideModule" />

        <activity
            android:name=".ui.activity.BookListActivity"
            android:label="@string/book_app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.BookDetailActivity" />
    </application>

</manifest>
